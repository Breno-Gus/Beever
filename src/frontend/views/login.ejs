</head>

<body class="bg-white flex items-center justify-center min-h-screen">

  <div class="w-full max-w-sm p-6 shadow-lg rounded-xl">

    <!-- Header -->
    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-1">Entrar</h2>
      <div class="h-1 bg-gray-300 rounded-full w-2/3"></div>
    </div>

    <!-- Email Input -->
    <div class="mb-4">
      <label class="block text-sm mb-1">E-mail</label>
      <div class="relative">
        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12a4.5 4.5 0 1 1-9 0 4.5 4.5 0 0 1 9 0Zm0 0c0 1.657 1.007 3 2.25 3S21 13.657 21 12a9 9 0 1 0-2.636 6.364M16.5 12V8.25" />
          </svg>
        </span>
        <input id="email" type="email" placeholder="Digite seu e-mail" class="pl-10 pr-3 py-2 border rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-yellow-400">
      </div>
    </div>

    <!-- Senha Input -->
    <div class="mb-4">
      <label class="block text-sm mb-1">Senha</label>
      <div class="relative">
        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 0 1 3 3m3 0a6 6 0 0 1-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1 1 21.75 8.25Z" />
          </svg>
        </span>
        <input id="senha" type="password" placeholder="Digite sua senha" class="pl-10 pr-3 py-2 border rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-yellow-400">
      </div>
    </div>

    <!-- Confirmar Senha (aparece s√≥ no cadastro) -->
