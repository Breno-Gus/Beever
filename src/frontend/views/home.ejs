<script>
  async function loadPage(page) {
    try {
      const res = await fetch(`http://localhost:3001/${page}`);
      if (!res.ok) throw new Error("Erro ao carregar " + page);
      const html = await res.text();
      document.getElementById("content").innerHTML = html;
    } catch (err) {
      document.getElementById("content").innerHTML = "<p class='text-red-500'>Erro ao carregar conteúdo</p>";
    }
  }
</script>

